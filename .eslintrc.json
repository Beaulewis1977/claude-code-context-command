{
  "env": {
    "node": true,
    "es2022": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": "off",
    "no-eval": "error",
    "no-implied-eval": "error",
    "no-new-func": "error",
    "no-script-url": "error",
    "no-unsafe-finally": "error",
    "no-unsafe-negation": "error"
  },
  "plugins": [],
  "overrides": [
    {
      "files": ["tests/**/*.js"],
      "rules": {
        "no-console": "off"
      }
    }
  ]
}